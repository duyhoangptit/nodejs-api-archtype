{
  "name": "backend-service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "up": "concurrently --kill-others-on-fail \"npm run build:watch\" \"docker compose up\"",
    "down": "docker compose down",
    "start:dev": "concurrently --kill-orthers-on-fail \"npm run build:watch\" \"npm run dev\"",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:stage": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "hoangtd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dyarleniber/clean-architecture-with-typescript-api.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "concurrently": "^8.2.0",
    "eslint": "8.22.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "express": "^4.18.2",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@infrastructure": "dist/infrastructure",
    "@main": "dist/main"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged",
      "git add ."
    ]
  },
  "engines": {
    "node": "20.x"
  }
}
